<?xml version="1.0"?>

<!--
  shm_server.launch

  Specifies launch settings for shm_server application
-->

<launch>
  <arg name="debug" default="false"/>

  <arg unless="$(arg debug)" name="LAUNCH_PREFIX" value=""/>
  <arg     if="$(arg debug)" name="LAUNCH_PREFIX" value="gdb -ex run --args "/>

  <arg name="name" doc="Name of created shared memory channel" />
  <arg name="size" doc="Size of created shared memory channel" />
  <arg name="readers" doc="Number of readers of shared memory channel" />

  <node name="shm_server" pkg="shm_server" type="shm_server"
    args="$(arg name) $(arg size) $(arg readers)"
    output="screen" />
</launch>
